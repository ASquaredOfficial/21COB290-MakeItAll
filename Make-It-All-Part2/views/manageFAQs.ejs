<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') -%>
    <script defer src="/js/manage.js"></script>
    <script defer src="/js/manageFaqs.js"></script>
</head>

<body>
    <%- include('navbar') -%>
    <div id="managerPage" class ="center">
        <div id="managerHeader" class="center">
            <p id="managerTitle"> <%= pageTitle %></p>
            <% button_links.forEach(element => { %>
                <a href="<%= element.url %>" type="button" id="specialSubmitButton" class="manageButtonsDecorations pointer <%= element.underline %>" ><%= element.text %></a>
            <% }) %>
        </div>

        <div id="searchGroup" class="center" style="padding-top:0px;">
            <select id="manageFaqsSearchDropdown" class="manageTableDropdown dropInput pointer" type="text">
                <option value="all" selected>All</option>
                <option value="id">ID</option>
                <option value="question">Question</option>
                <option value="answer">Answer</option>
                <option value="problemType">Problem Type</option>
                
                
            </select>
            <input id='manageFaqsSearchBar' class="center searchInput" type="text" autocomplete="off" placeholder="Search" autofocus style="display: inline;"/>
            <span style="width:0px;"></span>
            <button id="searchButton" onclick="searchFAQsTable()">Search</button>
        </div>

        <div id="editOptions">
            <div class="plus" type="submit" onclick="addFAQs()"></div>
            <div class="editButton" type="submit" onclick="showUpdatePopup()"></div>

            <form id="deleteForm" method="post" action="/admin/manage/faqs/delete">
                <div class="minusButton" onclick="deleteRow()"></div>
                <input id="deleteInput" name="id" class="dropInput input" type="text" oninput="returnTableBG()" placeholder="ID" list="listIds" autocomplete="off" required></input>
                    <datalist id="listIds">
                        <% for(var i=0; i < data.length; i++){ %>
                            <option value="<%= data[i].id %>">
                        <% } %>
                    </datalist>
            </form>
        </div>

        <table id="managerTable" class="center manager_table ">
            <colgroup class="tablewidth ">
                <col style="width: 15%;">
                <col style="width: 25%;">
                <col style="width: 35%;">
                <col style="width: 25%;">
            </colgroup>
            <thead>
                <tr>
                    <th class="manager_table">ID</th>
                    <th class="manager_table">Question</th>
                    <th class="manager_table">Answer</th>
                    <th class="manager_table">Problem Type</th>
                </tr>
                <tr>
                    <form id="addFaqsForm" method="post" action="/admin/manage/faqs/post">
                        <td class="manager_table">FAQ ID</td>
                        <td class="manager_table"><input name="question" type="text" class="dark input dropInput" style="margin:0px; width:97%; color:#F0BA00; height: 20px;" placeholder="Software Name"></input></td>
                        <td class="manager_table"><input name="answer" type="text" class="dark input dropInput" style="margin:0px; width:98%; color:#F0BA00; height: 20px;" placeholder="Software Name"></input></td>
                        <td class="manager_table">
                            <select type="text" name="problem_type" class="dark input dropInput pointer" style="margin:0px; width:100%; color:#F0BA00; height:24px;">
                                <option value="" disabled selected>Select Type</option>
                                <option value="1">Hardware</option>
                                <option value="2">Software</option>
                                <option value="3">Network</option>
                            </select>
                        </td>
                    </form>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < data.length; i++){ %>
                    <tr id="faqs<%= data[i].id %>" class="faqs_row" onclick=getIdentifier(this)>
                        <td id="faqId<%= data[i].id %>" class="manager_table"><%= data[i].id %></td>
                        <td id="faqQuestion<%= data[i].id %>" class="manager_table"><%= data[i].question %></td>
                        <td id="faqAnswer<%= data[i].id %>" class="manager_table"><%= data[i].answer %></td>
                        <td id="faqPType<%= data[i].id %>" class="manager_table"><%= data[i].problemType %></td>
                    </tr>
                <% } %>
                <% if(data.length == 0){ %>
                    <td colspan="4" class="manager_table" style="padding: 20px 0px;">No FAQs To Be Found!</td>
                <% } %>
            </tbody>
        </table>
    </div>

    <div id="updateInfo">
        <div style="float: right; display: inline;"><button id="exitButton" onclick="hideUpdatePopup()"></button></div>
        <h2 class="updateSubtitle" style="margin-bottom: 10px;"><u class="gold">Update User</u></h2>

        <form id="editFaqsForm" method="post" action="/admin/manage/faqs/put">
            <div>
                <p class="popupLabel">Problem ID:</p>
                <input id="updateIdentifierInput" name="id" class="popupInput" type="text" list="productID" placeholder="Enter ID" autocomplete="off" required/>
                    <datalist id="productID">
                        <% for(var i=0; i < data.length; i++){ %>
                            <option value="<%= data[i].id %>"><%= data[i].question %></option>
                        <% } %>
                    </datalist>
                
                <br><br><p class="popupLabel">Question:</p>
                <input name="question" class="popupInput" type="text" placeholder="FAQ Question" autocomplete="off"></input>
                
                <br><br><p class="popupLabel">Answer:</p>
                <input name="answer" class="popupInput" type="text" placeholder="FAQ Answer" autocomplete="off"></input>
                
                <br><br><p class="popupLabel">Type:</p>
                <input name="problem_type" class="popupInput" type="text" list="productType" placeholder="Problem Type" autocomplete="off"/>
                    <datalist id="productType">
                            <option value="Hardware">
                            <option value="Software">
                            <option value="Network">
                    </datalist>
            </div><br>
            
            <div class="txtCenter">
                <button class="filterPopupButton" onclick="editFaqsSubmit()">Update</button>
            </div>
        </form>
    </div>

    <button id="toTopButton" onclick="topFunction()" style="display: none;"><img id="upIcon" src="/images/UpButtonIcon.png"></button>
    <%- include('footer') -%>
</body>

</html>
